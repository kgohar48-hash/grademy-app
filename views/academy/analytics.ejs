<%- include("../partials/header")  %>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

<link rel="stylesheet" href="/css/customquiz.css">

<div class="container">
    <input type="hidden" id="id" value="<%=id%>">
    <div class="card" style="width: auto; height: auto;  cursor:auto;">
        <div class="container">
            <%- include("../partials/flash")  %>
            <div class="row">
                <div class="col-md-6">
                    <h2> Users : <span id="totalSignupsElement">Loading...</span></h2>
                </div>
                <div class="col-md-6">
                    <h2 > Quiz attempts : <span id="totalQuizAttemptsElement">Loading...</span></h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card mt-3 mb-3" style="width: auto; height: auto;  cursor:auto;">
        <div class="chartsection">
            <div class="signupChart">
                <canvas id="signupChart" class="chart"  width="1000" height="300"></canvas>                    
            </div>
            <div class="quizAttemptChart">
                <canvas id="quizAttemptChart" class="chart"  width="1000" height="300"></canvas>                    
            </div>
            
        </div>
    </div>
</div>

<script src="/static/academyanalytics.js"></script>

<%- include("../partials/footer")  %>
