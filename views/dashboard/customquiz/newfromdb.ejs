<%- include("../../partials/header")  %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="/css/customquiz.css">

<div class="container">
  <div class="card"  style="width: auto; height: auto;  cursor:auto;">
    <div class="card-header">
      <h1>Make your own custom quiz </h1>     
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-3">
          <div class="input-group mb-3 mt-4 mr-4 ml-4">
            <div class="input-group-prepend">
              <label class="input-group-text">Add ons : </label>
            </div>
            <select name="addons" class="custom-select" id="addons" required>
              <option selected value="1" >Choose...</option>
              <option  value="1" >1</option>
              <option  value="2" >2</option>
              <option  value="3" >3</option>
              <option  value="4" >4</option>
              <option  value="5" >5</option>
            </select>
            <button class="btn btn-primary ml-4" id="add" >
            <img src="https://res.cloudinary.com/grademy/image/upload/v1594028305/add-white-18dp_dgqxna.svg">
            </button>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <!-- changed this for new quiz system -->
        <form   action="/dashboard/newcustomquiz" method="POST">
          <div class="container">
              <div class="row">
                  <div class="col-md-12">
                      <div class="input-group-prepend mb-3">
                        <label class="input-group-text" for="inputGroupSelect01">Description</label>
                        <input type="text" name="description" >
                      </div>
                      <div data-role="dynamic-fields">
                            <div id="addon">
                              
                            </div>
                      </div>  <!-- /div[data-role="dynamic-fields"] -->
                  </div>  <!-- /div.col-md-12 -->
              </div>  <!-- /div.row -->
          </div>
          <%if(typeof(sectionId) == 'undefined'){%>
          <%}else{%>
            <input type="hidden" value="<%=sectionId%>" name="sectionId">
          <%}%>
          <div id="submit"></div>
          <h6 id="waitText" style="display: none;">Please wait this may take some time ...</h6>
          </form>
      </div>
    </div>
  </div>
</div>
<script>
  document.getElementById("submit").addEventListener("click", function(){
        document.getElementById("waitText").style.display = "block"
    })
</script>
<input type="hidden" value="<%=currentUser.category%>" id="category">
<script src="../../../static/newCustomQuiz.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

