<%- include("../partials/header")  %>
<div class="container">
	<div class="row">
		<h1 style="text-align : center">
			Edite <%=post.title%>
		</h1>
		<div style="width: 30% ; margin:25px auto ;">
			<form action="/newsfeed/<%=post._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="post[title]" value="<%=post.title%>" >	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="post[image]" value="<%=post.image%>" >	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="post[description]" value="<%=post.description%>" >	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					submit
					</button>
				</div>
			</form>	
			<a href="/newsfeed" >Back</a>
		</div>	
	</div>
	
</div>


<%- include("../partials/footer")  %>