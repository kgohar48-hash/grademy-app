<%- include("../partials/header")  %>
<div class="container">
	<h1 class="text-center">
		Create a New Post
	</h1>
	<div class="row">
		<div style="width: 30% ; margin:25px auto ;">
			<form action="/newsfeed" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type="text" name="post[title]" placeholder="title" >	
				</div>
				<div class="form-group">
					<label for="image">Image</label>
					<input type="file" id="image" name="image" accept="image/*" >	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="post[description]" placeholder="description" >	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					submit
					</button>
				</div>
			</form>	
			<a href="/newsfeed" >Back</a>
		</div>	
	</div>
	
</div>


<%- include("../partials/footer")  %>