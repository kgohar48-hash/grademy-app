<%- include("../partials/header")  %>
<link rel="stylesheet"  type="text/css" href="/css/login.css" />
<link rel="stylesheet"  type="text/css" href="/css/floating-labels.css" />
<div class="container" >
  <form  action="/login"  method="POST">
    <div class="login-div">
      <div class="logo"><img class="logo" src="https://res.cloudinary.com/grademy/image/upload/v1592388510/fuehwqgkf3g4qg86tyeg.png"></div>
      <div class="title">Login</div>
      <%- include("../partials/flash")  %>
      <div class="fields">
        <div class="form-label-group">
          <input type="username" class="user-input" id="username" name="username" placeholder="Username" style="text-transform: lowercase;" required autofocus>
          <label for="inputEmail">Username</label>
        </div>
        <div class="form-label-group">
          <input type="password" class="user-input" id="password" name="password" placeholder="Password" required >
          <label for="inputEmail">Password</label>
        </div>  
      <button class="signin-button" type="submit">LOG IN</button>
      <div class="link"><a href="/signup">Sign up ?</a></div>
      <div class="link"><a href="/forgot">Forgot password ?</a></div>
    </div>
  </form>
</div>
<script>
  setTimeout(()=>{
    document.getElementById("flash").style.display = "none"
    console.log("hide flash")
  },2500)
</script>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>