<%- include("../partials/header")  %>
<link rel="stylesheet"  type="text/css" href="/css/floating-labels.css" />

<div class="container">
    <div class="" >
     
       <div style="width: 40% ; min-width: 300px ; margin:25px auto ; color: black ;">
        <form class="form-signin" action="/verification" method="POST">
            <div class="text-center mb-4 mt-0">
              <%- include("../partials/flash")  %>
              <h1 class="h3 mb-3 font-weight-normal">Enter your key</h1>
              <p>A key has been sent to your number</p>
              <div class="form-label-group">
              <input type="text" id="text" class="form-control" name="token" placeholder="Paste your key here" required autofocus>
              <label for="inputEmail">Key</label>
              </div>

            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Verify</button>
            <a  data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
              Didn't receive key ?
            </a>
            <div class="collapse" id="collapseExample">
              <div class="card card-body" style="width: auto; height: auto;">
                  <h5 class="card-title">If you didn't receive the key within 30 seconds then go to the login page.</h5>
                  <h6 class="card-subtitle mb-2 ">Enter your username and password, If your number is not verified you will be redirected to this page again and a key will be sent to your number.</h6>
                  <div class="form-group">
                    <a class="btn btn-lg btn-primary btn-block" href="/login">Go to Login
                    </a>
                  </div>
              </div>
            </div>
            <a  data-toggle="collapse" href="#collapseExampleContact" role="button" aria-expanded="false" aria-controls="collapseExampleContact">
              Key is not working ?
            </a>
            <div class="collapse" id="collapseExampleContact">
              <div class="card card-body" style="width: auto; height: auto;">
                  <h5>Take care of the capital letters</h5>
                  <h5 class="card-title">If issue still persist contact our customer service</h5>
                  <h6 class="card-subtitle mb-2 ">Phone : 03084737543</h6>
                  <div class="form-group">
                  </div>
              </div>
            </div>
          </form>
       </div>
    </div>
</div>
<script>
  setTimeout(()=>{
    document.getElementById("flash").style.display = "none"
    console.log("hide flash")
  },2500)
</script>
